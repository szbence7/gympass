# ================================================================
# GymGo SaaS - Production Environment Variables
# ================================================================
# Copy this file to /srv/gymgo/prod.env and fill in actual values
# DO NOT commit staging.env or prod.env to git (they contain secrets)

# Docker Compose Project Name (used for network/volume isolation)
COMPOSE_PROJECT_NAME=gymgo-prod

# ================================================================
# Database Configuration
# ================================================================
POSTGRES_USER=gympass
POSTGRES_PASSWORD=CHANGE_ME_PROD_DB_PASSWORD
POSTGRES_DB=gymgo_prod
DATABASE_URL=postgresql://gympass:CHANGE_ME_PROD_DB_PASSWORD@postgres:5432/gymgo_prod

# ================================================================
# Server Configuration
# ================================================================
PORT=4000
NODE_ENV=production

# ================================================================
# JWT Secret (MUST BE UNIQUE PER ENVIRONMENT)
# ================================================================
JWT_SECRET=CHANGE_ME_PROD_JWT_SECRET_MIN_32_CHARS

# ================================================================
# Public URLs (Production Domain)
# ================================================================
PUBLIC_BASE_URL=https://gymgo.hu
TENANT_BASE_DOMAIN=gymgo.hu
TENANT_PROTOCOL=https
TENANT_PORT=

# ================================================================
# API Configuration
# ================================================================
API_BASE_URL=https://gymgo.hu

# ================================================================
# Stripe Configuration (USE LIVE KEYS FOR PRODUCTION)
# ================================================================
# Get from Stripe Dashboard → Developers → API keys
# Use LIVE keys (sk_live_...) for production
STRIPE_SECRET_KEY=sk_live_CHANGE_ME
STRIPE_WEBHOOK_SECRET=whsec_CHANGE_ME
STRIPE_PRICE_ID=price_CHANGE_ME

# ================================================================
# CORS Configuration
# ================================================================
CORS_ALLOWED_ORIGINS=https://gymgo.hu,https://*.gymgo.hu

# ================================================================
# Apple Wallet (Optional)
# ================================================================
# WALLET_TEAM_ID=YOUR_TEAM_ID
# WALLET_PASS_TYPE_ID=pass.com.yourdomain.gympass
# WALLET_ORG_NAME=Gym Name
# WALLET_CERT_P12_PATH=./certs/signerCert.p12
# WALLET_CERT_P12_PASSWORD=
# WALLET_WWDR_CERT_PATH=./certs/wwdr.pem
# WALLET_DEV_UNSIGNED=false

# ================================================================
# Feature Flags
# ================================================================
APPLE_WALLET=false

